@using HeritageWebApplication.Models
@model HeritageWebApplication.Models.RenovationCompany

@{
    Layout = "_Layout";
} 
<div>
    <p><h1>@Model.Name</h1></p>
    <p>@Model.Desc</p>
    @{
        if (@ViewBag.Buildings != null)
        {
            foreach (Building building in @ViewBag.Buildings)
            {
                <p><h3>@building.Name</h3></p>
                if (@building.Image != null)
                {
                    <img src="~/img/heritageObjects/@building.Image" width="360" height="360">
                }
            }
        }

    }
</div>